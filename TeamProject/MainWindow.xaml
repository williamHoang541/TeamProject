<Window x:Class="TeamProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TeamProject"
        mc:Ignorable="d"
        Title="MainWindow"  Height="350" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Input Text -->
        <TextBox x:Name="InputTextBox" Grid.Row="0" Margin="0,0,0,10" Height="100" TextWrapping="Wrap" AcceptsReturn="True" Grid.ColumnSpan="2"/>

        <!-- Translate Button -->
        <Button Grid.Row="1" Content="Translate" Height="30" Width="100" HorizontalAlignment="Center" Click="TranslateButton_Click" Padding="32,32"/>

        <!-- Output Text -->
        <TextBox x:Name="OutputTextBox" Grid.Row="2" Margin="0,10,0,0" Height="100" TextWrapping="Wrap" AcceptsReturn="True" IsReadOnly="True" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
