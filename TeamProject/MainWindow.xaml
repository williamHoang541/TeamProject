<Window x:Class="TeamProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TeamProject"
        mc:Ignorable="d"
        Title="Translator"  Height="350" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="InputTextBox" Grid.Row="0" Height="100" TextWrapping="Wrap" AcceptsReturn="True" Grid.ColumnSpan="2"/>
        <Button Content="Translate" Background="#395F18" Width="108" HorizontalAlignment="Left" Click="TranslateButton_Click" Foreground="#FEF6C7" Margin="98,26,0,26" Grid.Row="1"/>
        <Button Content="Select File" Background="#395F18" Width="110" HorizontalAlignment="Left" Click="SelectFileButton_Click" Foreground="#FEF6C7" Margin="375,26,0,26" Grid.Row="1"/>
        <TextBox x:Name="OutputTextBox" Grid.Row="2" Height="100" TextWrapping="Wrap" AcceptsReturn="True" IsReadOnly="True" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
